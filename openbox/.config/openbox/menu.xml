<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
    <menu id="root-menu" label="OpenBox 3"> 
	    <item label="Terminal"> <action name="Execute">
		<execute>st</execute>
            </action> </item>
	    <item label="Web browser"> <action name="Execute">
		<execute>firefox</execute>
            </action> </item>
            <item label="Text Editor"> <action name="Execute">
		<execute>st -e nvim</execute>
            </action> </item>
            <item label="File Manager"> <action name="Execute">
		<execute>st -e ranger</execute>
            </action> </item>
            <item label="Music Player"> <action name="Execute">
		<execute>st -f "Iosevka-18" -e mocp</execute>
            </action> </item>
            <item label="Task Manager"> <action name="Execute">
		<execute>st -g 180x40 -f "Iosevka-13" -e htop</execute>
            </action> </item>
            <item label="Calculator"> <action name="Execute">
	        <execute>st -g 50x20 -e bc</execute>
            </action> </item>
	<separator/>
        <menu id="37" label="Settings">
                <item label="Nvidia-Settings"> <action name="Execute">
                    <execute>nvidia-settings</execute>
                </action> </item>
