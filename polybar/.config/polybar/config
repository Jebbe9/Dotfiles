[module/uptime]
type = custom/script
interval = 60
format-prefix = "ÔÅ¢"
format-prefix-foreground = ${colors.foreground}

[module/storage]
type = custom/script
interval = 120
format-prefix = "ÔÇ† "
exec = df -h | awk 'NR==2 { print $4 }'

[module/package]
type = custom/script
interval = 120
format-prefix = "Ôë¶ "
exec = cat /var/lib/portage/world | wc -l

[module/music]
type = custom/script
interval = 120
format-prefix = "ÔÄÅ "
format-prefix-foreground = ${colors.foreground}

